<Window x:Class="Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating..."
        Width="420"
        Height="120"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True">
    <Border BorderBrush="Gray" 
            BorderThickness="1" 
            Background="White" >
        <Grid Margin="20" Background="WhiteSmoke">
            <StackPanel>
                <TextBlock Text="Updating application..."
                       FontSize="14"
                       Margin="0,0,0,10"/>

                <ProgressBar Height="20"
                         IsIndeterminate="True"/>
            </StackPanel>
        </Grid>
    </Border>
    
</Window>
